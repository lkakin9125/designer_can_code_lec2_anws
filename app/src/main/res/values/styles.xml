<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--config the color scheme-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--setup the button style-->
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="Widget.AppCompat.Button">
        <!--change the default background, text color and front style-->
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>
</resources>
